{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules",
    "vendor",
    "resources/assets/typescript/vendor.ts",
    "resources/assets/typescript/main.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}

